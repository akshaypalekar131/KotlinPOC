<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv_battery_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/ten_dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:id="@+id/tv_battery_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/tv_battery_percentage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
            android:id="@+id/tv_total_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="@dimen/ten_dp"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@+id/tv_battery_status"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:id="@+id/tv_free_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_storage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:id="@+id/tv_used_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:layout_margin="@dimen/ten_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_free_storage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <Button
            android:id="@+id/btn_product_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_products_data"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_15"
            android:layout_margin="@dimen/thirty_dp"
            android:textAllCaps="false"
            android:background="@android:color/holo_green_light"
            app:layout_constraintTop_toBottomOf="@+id/tv_used_storage"
            android:textStyle="bold"
    />

</android.support.constraint.ConstraintLayout>